<div class="container">
    <div class="row">
        <div class="header">
            <div class="col-sm-12 text-center">
                <h1 class=>Eat-Da-Burger</h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 text-center task">
            <h3> Burgers to be devoured</h3> {{#each burger_data}} {{#unless this.devoured}}
            <div>
                <pre>{{this.id}}. {{this.burger_name}}</pre>
            </div>
            <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                <input type="hidden" type="text" name="id" value={{this.id}}>
                <br>
                <button type="submit" class="btn btn-default">Devour it!</button>
            </form>
            {{/unless}} {{/each}}
        </div>
        <div class="col-sm-6 text-center task">
            <h3> Burgers already devoured</h3>
            <div>
                {{#each burger_data}} {{#if this.devoured}}
                <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly> {{/if}} {{/each}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h1>    </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-1">
            <p> </p>
        </div>
        <div class="col-sm-10 text-center">
            <p>Enter a burger you want to eat Click the "Submit" button.</p>
            <form action="/burgers/create" method="POST">
                <input type="text" class="form-control" name="burger_name" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
            </form>
        </div>
        <div class="col-sm-1">
            <p> </p>
        </div>
    </div>
</div>